@model IEnumerable<CRUDEmployee.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h1>Employee List</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Employee</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Salary</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Position</td>
            <td>@item.Salary</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
